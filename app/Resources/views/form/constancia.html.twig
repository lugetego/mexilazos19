{% extends 'base.html.twig' %}

{% block body %}

    {% if registro is not defined %}
        <div class="container text-center">
            <button type="button" class="btn btn-primary " data-toggle="modal" data-target="#correo">Busca tu registro</button>
        </div>
    {% else %}
        <div class="container">
            <a href="{{ asset('files/') }}{{ registro.mail ~ '.pdf' }}">Descargar</a>
        </div>
    {% endif %}

    {% if form is defined %}
        <div class="modal fade" id="correo" tabindex="-1" role="dialog" aria-labelledby="registronewModalLabel">
            <div class="modal-dialog modal-md" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close" ><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="myModalLabel"><i class="fa fa-search"></i> Busca tu registro</h4>
                        </div>
                        {{ form_start(form) }}
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">

                                        <div>{{ form_label(form.email) }}</div>
                                        <div>
                                            {{ form_widget(form.email, {'attr': {'class': 'form-control input-sm'} } ) }}
                                        </div>
                                        <div>{{ form_errors(form.email) }}</div>
                                        <br>
                                        <div class="row">
                                            <div class="col-lg-12 col-lg-offset-5">
                                                <input type="submit" value="Buscar" class="btn btn-success"  />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

{% endblock %}


{% block javascripts %}

    {{ parent() }}

    <script type="text/javascript">
        $(window).on('load',function(){
            $('#correo').modal('show');
        });
    </script>

{% endblock %}