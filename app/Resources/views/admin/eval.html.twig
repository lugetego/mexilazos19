{% form_theme form 'form/form_errors.html.twig' %}

{{ form_start(form, {'action': path('form_eval', { 'id': id})}) }}

    <div class="panel panel-default">
        <div class="panel-body">
            <div class="row">
                <div class="col-lg-12">
                    <div class="page-header col-lg-12 ">
                        <i class="fa fa-check-square"></i> Evaluaci√≥n
                    </div>

                    <div class="col-lg-4">
                        <div class="form-group">
                            <div >
                                {{ form_label(form.aceptado) }}
                            </div>
                            <div>
                                {% spaceless %}
                                    {% for child in form.aceptado %}
                                        <div class="radio-inline">
                                            {{ form_widget(child) }}  {{ form_label(child, null, {'label_attr': {'class': 'btn btn-default btn-xs'}}) }}
                                        </div>
                                    {% endfor %}
                                {% endspaceless %}
                            </div>
                            <div>{{ form_errors(form.aceptado) }}</div>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="form-group">
                            <div >
                                {{ form_label(form.confirmado) }}
                            </div>
                            <div>
                                {% spaceless %}
                                    {% for child in form.confirmado %}
                                        <div class="radio-inline">
                                            {{ form_widget(child) }}  {{ form_label(child, null, {'label_attr': {'class': 'btn btn-default btn-xs'}}) }}
                                        </div>
                                    {% endfor %}
                                {% endspaceless %}
                            </div>
                            <div>{{ form_errors(form.aceptado) }}</div>
                        </div>
                    </div>


                    <div class="col-md-12" >
                        <div>{{ form_label(form.comentarios) }}</div>
                        <div>{{ form_widget(form.comentarios, {'attr': {'class': 'form-control input-sm','rows':'5'} } ) }}</div>
                        <div>{{ form_errors(form.comentarios) }}</div><br>
                    </div>
                </div>
            </div>

            <div class="col-lg-12 col-lg-offset-4">
                {{ form_rest(form) }}
                <button type="submit"  class="btn btn-default">Guardar</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>






